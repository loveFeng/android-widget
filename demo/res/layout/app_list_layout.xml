<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/app_list_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"

>
<!-- 	android:background="@android:color/background_dark" -->

<ListView
	android:id="@+id/application_list"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_alignParentTop="true"
	android:layout_above="@+id/linear"
/>

<LinearLayout
	android:id="@+id/linear"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_alignParentBottom="true"
>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
>
<Button
	android:id="@+id/refresh"
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:layout_weight="1"
	android:text="@string/refresh"
/>
<Button
	android:id="@+id/kill"
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:layout_weight="1"
	android:text="@string/kill"
/>
<Button
	android:id="@+id/kill_all"
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:layout_weight="1"
	android:text="@string/kill_all"
/>

</LinearLayout>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="6dip"
	android:text="@string/left_memory"
/>
<TextView
	android:id="@+id/left_memory"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
/>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/process_counts"
/>
<TextView
	android:id="@+id/process_counts"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
/>
</LinearLayout>
</LinearLayout>
</RelativeLayout>    